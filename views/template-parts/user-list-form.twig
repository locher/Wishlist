<ul class="grid col{{ col }}">

	{% for user in list %}

	<li class="list_elt single-people">
		<div class="avatar-wrapper">
			<img src="assets/img/avatar/avatar{{ user.picture }}.png" alt="">
			<div class="svg-wrapper">
				<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 114.73 131.54"><path class="a" d="M101.72,14.09c11.6,13,12.9,34.8,13,56.8s-1,44-12.6,53.8-33.6,7.4-51.6,3.2-31.7-9.9-40.1-19.7S-.88,84.59.22,72s6.5-24.1,14.9-37.1,19.8-27.5,36.5-32.7S90.12,1.09,101.72,14.09Z"/></svg>
			</div>
		</div>
		<div class="inner-singlePeople">
		<form action="user.php?user={{ user.ID }}" method="post">
			<h3>{{ user.name|e }}</h3>
			<input type="hidden" name="connect" value="true">
			<button class="bt color-bt" type="submit">{{ btTxt }}</button>
			</form>
		</div>
	</li>

	{% endfor %}

</ul>
